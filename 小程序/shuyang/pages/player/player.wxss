@import "../../utils/wxParse/wxParse.wxss";

.article-pic {
    width: 100%;
    height: 300rpx;
    overflow: hidden;
}
.article-pic image {
    width: 100%;
}
.article-wrap {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    background-color: #fff;
    padding: 20rpx;
}
.article-title {
    margin-bottom: 20rpx;
    font-weight: bold;
    font-size: 20pt;
    line-height: 1.2;
}
.article-info {
    margin-top: 20rpx;
    font-size: 9pt;
    height: 30rpx;
    padding: 10rpx 0;
    border-top: 1px solid #ddd;
    overflow: hidden;
    display: flex;
}
.article-info text {
    color: #888;
}
.article-desc {
    border-radius: 4px;
    background-color: #f0f0f0;
    color: #888;
    padding: 16rpx;
    margin-bottom: 8rpx;
    font-size: 11pt;
    line-height: 1.4;
}

.article-tags {
    display: flex;
}
.tag-name {
    font-size: 11pt;
    background-color: #70d7fa;
    line-height: 30rpx;
    border-radius: 4rpx;
    color: #fff;
    padding: 10rpx;
    margin-right: 20rpx;
}
.article-body {
    padding: 0;
    font-size: 14pt;
    line-height: 1.6;
    color: #1a1a1a;
    margin: 0;
}
.wxParse-p{
    margin: 0 !important;padding: 0 !important;
    margin-bottom: 20rpx;
}
.article_pic{margin: 5px auto;}
